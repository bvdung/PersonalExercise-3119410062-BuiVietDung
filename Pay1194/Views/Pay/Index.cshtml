@model IEnumerable<PayIndexViewModel>
@{
    ViewBag.Title = "Pay";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav arial-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Payroll
                        </li>
                    </ol>
                </nav>
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                   <th>ID</th>
                                    <th>Employee</th>
                                   
                                    <th>Pay Date</th>
                                    <th>Month</th>
                                    <th>Tax year</th>
                                    <th>TotalEarnings</th>
                                    <th>TotalDeduction</th>
                                    <th>NetPay</th>
                                    <th class="text-warning">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-controller="Pay" asp-route-id="@item.Id">
                                                @item.Id
                                            </a>
                                        </td>
                                        <td>@item.FullName</td>
                                        
                                        <td>@item.DatePay</td>
                                        <td>@item.MonthPay</td>
                                        <td>@item.YearOfTax</td>
                                        <td>@item.TotalEarnings</td>
                                       
                                        <td>@item.TotalDeduction</td>
                                        <td>@item.NetPayment</td>
                                        <td>
                                            <a asp-controller="Pay" asp-action="Detail" asp-route-id="@item.Id" class="text-success"><i class="fas fa-bars"></i>Detail</a>
                                            <a asp-controller="Pay" asp-action="Payslip" asp-route-id="@item.Id" class="text-primary"><i class="fas fa-bars"></i>Payslip</a>
                                            <a asp-controller="Pay" asp-action="Detail" asp-route-id="@item.Id" class="text-danger"><i class="fas fa-bars"></i>PDF</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>