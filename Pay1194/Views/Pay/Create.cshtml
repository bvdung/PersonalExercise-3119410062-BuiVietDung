@using Pay1194.Entity
@model PayCreateViewModel


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Pay" asp-action="Index">PayRecord List</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">New PayRecord</li>
                </ol>
            </nav><br />
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                     <div class="form-group col-md-2">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="form-group col-md-10">
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employess">
                           
                        </select>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="PayMonth"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="date" class="form-control" asp-for="PayMonth" placeholder="Enter First Name" />
                        <span asp-validation-for="PayMonth" class="text-danger"></span>
                    </div>


                    <div class="col-md-2">
                    </div>

                    <div class="form-group col-md-2">
                        <label asp-for="TaxYear"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="TaxYearId" class="form-control" asp-items="ViewBag.taxYear">

               
                        </select>
                        <span asp-validation-for="TaxYear" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="PayDate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="date" class="form-control" asp-for="PayDate" placeholder="Enter First Name" />
                        <span asp-validation-for="PayDate" class="text-danger"></span>
                    </div>

                     <div class="col-md-2">
                    </div>

                    <div class="form-group col-md-2">
                        <label asp-for="HourlyRate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" class="form-control" asp-for="HourlyRate" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    
                    <div class="form-group col-md-2">
                        <label asp-for="ContractualHours"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" class="form-control" asp-for="ContractualHours" placeholder="Enter NI Number" />
                        <span asp-validation-for="ContractualHours" class="text-danger"></span>
                    </div>


                    <div class="col-md-2">
                    </div>


                    <div class="form-group col-md-2">
                        <label asp-for="HoursWorked"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" class="form-control" asp-for="HoursWorked" />
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                  
                    <div class="col-md-2">
                    </div>

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-secondary btn-rounded float-left" style="margin-right:auto.7em">Submit</button>
                    <a asp-controller="Pay" asp-action="Index" class="btn btn-primary btn-rounded float-right" style="margin-right:auto.7em">Back to list</a>
                    <br />
                    <br />
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_validationScriptsPartial");
    }
}